<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:visibility="visible" >

    <Button
        android:id="@+id/btnWriteWorkTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indtast længden på din arbejdsdag"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTxtWriteWorkTimeHours"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Antal timer"
            android:inputType="number"
            android:visibility="gone" />

            <requestFocus />

        <EditText
            android:id="@+id/editTxtWriteWorkTimeMin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Minutter"
            android:inputType="number"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSaveWorkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gem"
            android:visibility="gone" 
            android:state_selected="true"/>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/tBtnStartWorkTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mød på arbejde"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textOff="Mød på arbejde"
        android:textOn="Slut arbejdsdagen"
        android:padding="15dp"
    	android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btnStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistikker"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

    <Button
        android:id="@+id/btnEndProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afslut"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

</LinearLayout>
